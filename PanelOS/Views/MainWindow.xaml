<Window
    x:Class="PanelOS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ie="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:PanelOS.Helpers"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Panel OS"
    Width="930"
    Height="480"
    Background="#FF202124"
    Closing="Window_Closing"
    FontFamily="{materialDesign:MaterialDesignFont}"
    Icon="/PanelOS;component/Images/logo256.ico"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    TextElement.FontSize="14"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary Source="../StyleOverrides.xaml" />
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="0" />
    </WindowChrome.WindowChrome>

    <Grid Background="#FF2E2F33">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <materialDesign:Snackbar
            Name="MainWindowPopup"
            Grid.Column="0"
            Panel.ZIndex="1"
            Background="#FF27282B"
            Foreground="#FFB4B4B4"
            MessageQueue="{Binding LauncherMessageQueue}" />

        <Grid Grid.Column="0">
            <Image
                Width="20"
                Height="18"
                Margin="4,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/PanelOS;component/Images/logo24.ico" />
        </Grid>

        <Grid Grid.Column="0">
            <TabControl
                Name="LauncherTabControl"
                Margin="0,-2,0,0"
                Padding="0,0,0,0"
                Background="#FF202125"
                BorderBrush="#00ACACAC"
                BorderThickness="0" SelectionChanged="LauncherTabControl_SelectionChanged">

                <!--  TabControl  -->

                <TabControl.Resources>
                    <Style TargetType="{x:Type TabPanel}">
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="Height" Value="18" />
                    </Style>

                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="#FFBCBCBC" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid
                                        Name="Panel"
                                        Margin="0,0,-2,0"
                                        Background="#FF28282A">
                                        <ContentPresenter
                                            x:Name="ContentSite"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            ContentSource="Header" />
                                    </Grid>

                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextElement.Foreground" Value="#FFF1F1F1" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="TextElement.Foreground" Value="#FFF1F1F1" />
                                            <Setter Property="TextElement.FontWeight" Value="Bold" />
                                            <Setter TargetName="Panel" Property="Background" Value="#FF202125" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Panel" Property="Background" Value="#FF28282A" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!--  Startscreen  -->

                <TabItem
                    Name="HomeTab"
                    Width="50"
                    Height="18"
                    Padding="0"
                    Background="#FF28282A"
                    BorderBrush="#00ACACAC"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="12"
                    Header="Home"
                    IsSelected="True">
                    <Grid Cursor="Arrow">
                        <Grid.Background>
                            <ImageBrush ImageSource="/PanelOS;component/Images/main_background.png" Opacity="0.8" />
                        </Grid.Background>
                        <Grid Margin="50">
                            <Grid.RowDefinitions>
                            <RowDefinition Height="142*"/>
                            <RowDefinition Height="0*"/>
                            <RowDefinition Height="39*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <!--  Calibration button  -->

                        <Button
                            Name="CalibrationButton"
                            Grid.Column="0"
                            Width="160"
                            Height="225"
                            Padding="7"
                            HorizontalContentAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            BorderBrush="Transparent"
                            Click="CalibrationButton_Click"
                            Opacity="0.85" Margin="25,68" Grid.RowSpan="3">

                            <Button.Background>
                                <ImageBrush ImageSource="/PanelOS;component/Images/calibration_background.png" Stretch="UniformToFill" />
                            </Button.Background>

                            <StackPanel
                                Margin="0,0,0,10"
                                HorizontalAlignment="Left"
                                Orientation="Vertical">

                                <Label
                                    Margin="0,0,0,2"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    FontSize="16"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    Calibration
                                </Label>

                                <Label
                                    Padding="0"
                                    FontSize="9"
                                    FontStretch="UltraExpanded"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    Calibrate your
                                </Label>

                                <Label
                                    Margin="0,-1,0,0"
                                    Padding="0"
                                    FontSize="9"
                                    FontStretch="UltraExpanded"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    bots for the rank LEM
                                </Label>
                            </StackPanel>
                        </Button>

                        <!--  Boost button  -->

                        <Button
                            Name="BoostButton"
                            Grid.Column="1"
                            Width="150"
                            Height="225"
                            Padding="9"
                            HorizontalContentAlignment="Left"
                            materialDesign:ButtonAssist.CornerRadius="4"
                            BorderBrush="Transparent"
                            Click="BoostButton_Click"
                            Opacity="0.85" Margin="30,68" Grid.RowSpan="3">

                            <Button.Background>
                                <ImageBrush ImageSource="/PanelOS;component/Images/boost_background.png" Stretch="UniformToFill" />
                            </Button.Background>

                            <StackPanel
                                Margin="0,0,0,10"
                                HorizontalAlignment="Left"
                                Orientation="Vertical">

                                <Label
                                    Margin="0,0,0,2"
                                    Padding="0"
                                    HorizontalAlignment="Left"
                                    FontSize="16"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    Boost
                                </Label>

                                <Label
                                    Padding="0"
                                    FontSize="9"
                                    FontStretch="UltraExpanded"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    Mode for the
                                </Label>

                                <Label
                                    Margin="0,-1,0,0"
                                    Padding="0"
                                    FontSize="9"
                                    FontStretch="UltraExpanded"
                                    FontWeight="Normal"
                                    Foreground="#FFFFF1D6">
                                    Boosters
                                </Label>
                            </StackPanel>
                        </Button>

                        <StackPanel
                            Grid.Column="2"
                            Height="225"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Orientation="Vertical" Margin="0,68" Grid.RowSpan="3">

                            <!--  Community button  -->

                            <Button
                                Name="CommunityButton"
                                Width="150"
                                Height="100"
                                Margin="0"
                                Padding="10,20,0,0"
                                HorizontalContentAlignment="Left"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                BorderBrush="Transparent"
                                Click="CommunityButton_Click"
                                Opacity="0.9">

                                <Button.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                                <SkewTransform CenterX="0.5" CenterY="0.5" />
                                                <RotateTransform Angle="60" CenterX="0.5" CenterY="0.5" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Offset="1" Color="#FF0D5F78" />
                                        <GradientStop Color="#FF3AA17E" />
                                    </LinearGradientBrush>
                                </Button.Background>

                                <StackPanel
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Left"
                                    Orientation="Vertical">

                                    <Label
                                        Margin="0,0,0,2"
                                        Padding="0"
                                        HorizontalAlignment="Left"
                                        FontSize="16"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        Community
                                    </Label>

                                    <Label
                                        Padding="0"
                                        FontSize="9"
                                        FontStretch="UltraExpanded"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        Our news and
                                    </Label>

                                    <Label
                                        Margin="0,-1,0,0"
                                        Padding="0"
                                        FontSize="9"
                                        FontStretch="UltraExpanded"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        discussions
                                    </Label>
                                </StackPanel>
                            </Button>

                            <!--  FAQ button  -->

                            <Button
                                Name="FAQButton"
                                Width="150"
                                Height="100"
                                Margin="0,25,0,0"
                                Padding="10,20,0,0"
                                HorizontalContentAlignment="Left"
                                materialDesign:ButtonAssist.CornerRadius="4"
                                BorderBrush="Transparent"
                                Click="FAQButton_Click"
                                Opacity="0.9">

                                <Button.Background>
                                    <LinearGradientBrush MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" EndPoint="0.5,1">
                                        <LinearGradientBrush.RelativeTransform>
                                            <TransformGroup>
                                                <ScaleTransform CenterX="0.5" CenterY="0.5" />
                                                <SkewTransform CenterX="0.5" CenterY="0.5" />
                                                <RotateTransform Angle="40" CenterX="0.5" CenterY="0.5" />
                                                <TranslateTransform />
                                            </TransformGroup>
                                        </LinearGradientBrush.RelativeTransform>
                                        <GradientStop Color="#FF6F367E" />
                                        <GradientStop Offset="1" Color="#FFC7347B" />
                                    </LinearGradientBrush>
                                </Button.Background>

                                <StackPanel
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Left"
                                    Orientation="Vertical">

                                    <Label
                                        Margin="0,0,0,2"
                                        Padding="0"
                                        HorizontalAlignment="Left"
                                        FontSize="16"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        FAQ
                                    </Label>

                                    <Label
                                        Padding="0"
                                        FontSize="9"
                                        FontStretch="UltraExpanded"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        Answers
                                    </Label>

                                    <Label
                                        Margin="0,-1,0,0"
                                        Padding="0"
                                        FontSize="9"
                                        FontStretch="UltraExpanded"
                                        FontWeight="Normal"
                                        Foreground="#FFFFF1D6">
                                        to the questions
                                    </Label>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
        </Grid>
        </TabItem>

                <!--  Calibration tab  -->

                <TabItem
                    Name="CalibrationTab"
                    Width="80"
                    Height="18"
                    Padding="0"
                    Background="#FF28282A"
                    BorderBrush="#00ACACAC"
                    BorderThickness="0"
                    Cursor="Hand"
                    FontSize="12"
                    Header="Calibration">

                    <ScrollViewer
                        Margin="0,5,0,5"
                        Cursor="Arrow"
                        HorizontalScrollBarVisibility="Disabled"
                        VerticalScrollBarVisibility="Visible">

                        <ItemsControl Name="CalibrationPanel" Cursor="Arrow">
                            <ItemsControl.Resources>
                                <CollectionViewSource x:Key="CalibrationLobbiesCollection" Source="{Binding CalibrationLobbies}" />
                            </ItemsControl.Resources>

                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid
                                        Width="150"
                                        Height="210"
                                        Margin="20,10,10,5">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="16" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid.Background>
                                            <ImageBrush
                                                ImageSource="/PanelOS;component/Images/lobby_background.png"
                                                Opacity="0.5"
                                                Stretch="UniformToFill" />
                                        </Grid.Background>

                                        <!--  Lobby header  -->

                                        <Grid
                                            Grid.Row="0"
                                            Height="16"
                                            Margin="0"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Background="#7F31363F">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="16" />
                                                <ColumnDefinition Width="16" />
                                            </Grid.ColumnDefinitions>

                                            <Label
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                Padding="0"
                                                VerticalAlignment="Center"
                                                Content="{Binding Name}"
                                                FontSize="12" />

                                            <Button
                                                Grid.Column="1"
                                                Width="16"
                                                Height="16"
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                materialDesign:ButtonAssist.CornerRadius="2,0,0,2"
                                                Background="#FF2B2B2D"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.StartCalibrationLobbyCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource MaterialDesignFlatButton}">

                                                <materialDesign:PackIcon
                                                    Width="16"
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center">

                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="Play" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Path=Active}" Value="True">
                                                                    <Setter Property="Kind" Value="Record" />
                                                                    <Setter Property="Foreground" Value="DarkRed" />
                                                                </DataTrigger>

                                                                <DataTrigger Binding="{Binding Path=Active}" Value="False">
                                                                    <Setter Property="Kind" Value="Play" />
                                                                    <Setter Property="Foreground" Value="Gray" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                            </Button>

                                            <Button
                                                Grid.Column="2"
                                                Width="16"
                                                Height="16"
                                                Padding="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                materialDesign:ButtonAssist.CornerRadius="0"
                                                Background="#FF2B2B2D"
                                                BorderThickness="0"
                                                Command="{Binding DataContext.DeleteCalibrationLobbyCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ItemsControl}}}"
                                                CommandParameter="{Binding}"
                                                Style="{DynamicResource MaterialDesignFlatButton}">

                                                <materialDesign:PackIcon
                                                    Width="16"
                                                    Height="16"
                                                    Padding="0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Foreground="Gray"
                                                    Kind="Close" />
                                            </Button>
                                        </Grid>

                                        <materialDesign:Card
                                            Grid.Row="1"
                                            Margin="3"
                                            Padding="0,0,0,10"
                                            materialDesign:ShadowAssist.ShadowDepth="Depth0"
                                            Background="#8C242527"
                                            UniformCornerRadius="5">

                                            <!--  Account lists  -->

                                            <ScrollViewer>
                                                <Grid Margin="0,5,0,0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="13" />
                                                        <RowDefinition Height="45" />
                                                        <RowDefinition Height="13" />
                                                        <RowDefinition Height="85" />
                                                        <RowDefinition Height="13" />
                                                        <RowDefinition Height="85" />
                                                    </Grid.RowDefinitions>

                                                    <Label
                                                        Grid.Row="0"
                                                        Margin="5,0,0,0"
                                                        Padding="0"
                                                        FontSize="10"
                                                        Foreground="#DDE4E3E3">
                                                        Leaders
                                                    </Label>

                                                    <StackPanel Grid.Row="1" Margin="0">
                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                                                            <Setter Property="Border.Background" Value="#FF24272E" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <ComboBox
                                                                Height="20"
                                                                Margin="5,0,5,0"
                                                                Padding="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                VerticalContentAlignment="Center"
                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                BorderThickness="0"
                                                                DisplayMemberPath="Login"
                                                                DropDownClosed="ComboBox_DropDownClosed"
                                                                FontSize="10"
                                                                Foreground="#FFA1A1A1"
                                                                ItemsSource="{Binding DataContext.Accounts, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                SelectedValue="{Binding Leader1}"
                                                                SelectedValuePath="AccountId"
                                                                SelectionChanged="CalibrationComboBox_SelectionChanged">

                                                                <Validation.ErrorTemplate>
                                                                    <ControlTemplate>
                                                                        <StackPanel>
                                                                            <AdornedElementPlaceholder x:Name="comboBox" />
                                                                            <TextBlock Foreground="Red" Text="" />
                                                                        </StackPanel>
                                                                    </ControlTemplate>
                                                                </Validation.ErrorTemplate>
                                                            </ComboBox>
                                                        </Border>

                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                                                            <Setter Property="Border.Background" Value="#FF24272E" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <ComboBox
                                                                Height="20"
                                                                Margin="5,0,5,0"
                                                                Padding="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                VerticalContentAlignment="Center"
                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                BorderThickness="0"
                                                                DisplayMemberPath="Login"
                                                                DropDownClosed="ComboBox_DropDownClosed"
                                                                FontSize="10"
                                                                Foreground="#FFA1A1A1"
                                                                ItemsSource="{Binding DataContext.Accounts, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                SelectedValue="{Binding Leader2}"
                                                                SelectedValuePath="AccountId"
                                                                SelectionChanged="CalibrationComboBox_SelectionChanged">

                                                                <Validation.ErrorTemplate>
                                                                    <ControlTemplate>
                                                                        <StackPanel>
                                                                            <AdornedElementPlaceholder x:Name="comboBox" />
                                                                            <TextBlock Foreground="Red" Text="" />
                                                                        </StackPanel>
                                                                    </ControlTemplate>
                                                                </Validation.ErrorTemplate>
                                                            </ComboBox>
                                                        </Border>
                                                    </StackPanel>

                                                    <Label
                                                        Grid.Row="2"
                                                        Margin="5,0,0,0"
                                                        Padding="0"
                                                        FontSize="10"
                                                        Foreground="#DDE4E3E3">
                                                        Winners
                                                    </Label>

                                                    <StackPanel Grid.Row="3" Margin="0">
                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                                                            <Setter Property="Border.Background" Value="#FF24272E" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <ComboBox
                                                                Height="20"
                                                                Margin="5,0,5,0"
                                                                Padding="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                VerticalContentAlignment="Center"
                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                BorderThickness="0"
                                                                DisplayMemberPath="Login"
                                                                DropDownClosed="ComboBox_DropDownClosed"
                                                                FontSize="10"
                                                                Foreground="#FFA1A1A1"
                                                                ItemsSource="{Binding DataContext.Accounts, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                SelectedValue="{Binding Winner1}"
                                                                SelectedValuePath="AccountId"
                                                                SelectionChanged="CalibrationComboBox_SelectionChanged">

                                                                <Validation.ErrorTemplate>
                                                                    <ControlTemplate>
                                                                        <StackPanel>
                                                                            <AdornedElementPlaceholder x:Name="comboBox" />
                                                                            <TextBlock Foreground="Red" Text="" />
                                                                        </StackPanel>
                                                                    </ControlTemplate>
                                                                </Validation.ErrorTemplate>
                                                            </ComboBox>
                                                        </Border>

                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                                                            <Setter Property="Border.Background" Value="#FF24272E" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <ComboBox
                                                                Height="20"
                                                                Margin="5,0,5,0"
                                                                Padding="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                VerticalContentAlignment="Center"
                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                BorderThickness="0"
                                                                DisplayMemberPath="Login"
                                                                DropDownClosed="ComboBox_DropDownClosed"
                                                                FontSize="10"
                                                                Foreground="#FFA1A1A1"
                                                                ItemsSource="{Binding DataContext.Accounts, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                SelectedValue="{Binding Winner2}"
                                                                SelectedValuePath="AccountId"
                                                                SelectionChanged="CalibrationComboBox_SelectionChanged">

                                                                <Validation.ErrorTemplate>
                                                                    <ControlTemplate>
                                                                        <StackPanel>
                                                                            <AdornedElementPlaceholder x:Name="comboBox" />
                                                                            <TextBlock Foreground="Red" Text="" />
                                                                        </StackPanel>
                                                                    </ControlTemplate>
                                                                </Validation.ErrorTemplate>
                                                            </ComboBox>
                                                        </Border>

                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
                                                                        <Trigger Property="Border.IsMouseOver" Value="True">
                                                                            <Setter Property="Border.Background" Value="#FF24272E" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <ComboBox
                                                                Height="20"
                                                                Margin="5,0,5,0"
                                                                Padding="0"
                                                                HorizontalAlignment="Stretch"
                                                                HorizontalContentAlignment="Left"
                                                                VerticalContentAlignment="Center"
                                                                materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                                BorderThickness="0"
                                                                DisplayMemberPath="Login"
                                                                DropDownClosed="ComboBox_DropDownClosed"
                                                                FontSize="10"
                                                                Foreground="#FFA1A1A1"
                                                                ItemsSource="{Binding DataContext.Accounts, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                                                ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                                                SelectedValue="{Binding Winner3}"
                                                                SelectedValuePath="AccountId"
                                                                SelectionChanged="CalibrationComboBox_SelectionChanged">

                                                                <Validation.ErrorTemplate>
                                                                    <ControlTemplate>
                                                                        <StackPanel>
                                                                            <AdornedElementPlaceholder x:Name="comboBox" />
                                                                            <TextBlock Foreground="Red" Text="" />
                                                                        </StackPanel>
                                                                    </ControlTemplate>
                                                                </Validation.ErrorTemplate>
                                                            </ComboBox>
                                                        </Border>

                                                        <Border>
                                                            <Border.Style>
                                                                <Style>
                                                                    <Style.Triggers>
