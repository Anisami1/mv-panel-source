                                </VisualBrush>
                            </Border.BorderBrush>

                            <Button
                                Name="StopAccountButton"
                                Width="30"
                                Height="18"
                                Padding="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                materialDesign:RippleAssist.Feedback="#FF912E0A"
                                materialDesign:RippleAssist.RippleSizeMultiplier="1.5"
                                Command="{Binding StopAccountsCommand}"
                                FontSize="10"
                                Style="{DynamicResource MaterialDesignFlatButton}">

                                <materialDesign:PackIcon
                                    Width="18"
                                    Height="18"
                                    Foreground="#FF912E0A"
                                    Kind="Close" />
                            </Button>
                        </Border>
                    </StackPanel>

                    <Border
                        Width="40"
                        Height="40"
                        Margin="5,0,0,0"
                        Padding="0"
                        BorderThickness="2">

                        <Border.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="Border.IsMouseOver" Value="True">
                                        <Setter Property="Border.Background" Value="#339E2F2F" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Border.BorderBrush>
                            <VisualBrush>
                                <VisualBrush.Visual>
                                    <Rectangle
                                        Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualWidth}"
                                        Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=ActualHeight}"
                                        RadiusX="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=CornerRadius.TopRight}"
                                        RadiusY="{Binding RelativeSource={RelativeSource AncestorType={x:Type Border}}, Path=CornerRadius.BottomLeft}"
                                        Stroke="#FF9E2F2F"
                                        StrokeDashArray="5 1.5"
                                        StrokeThickness="1" />
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Border.BorderBrush>

                        <Button
                            Name="CloseAllAccountsButton"
                            Width="40"
                            Height="40"
                            Padding="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            materialDesign:RippleAssist.Feedback="#FF9E2F2F"
                            materialDesign:RippleAssist.RippleSizeMultiplier="1.5"
                            Command="{Binding StopAllAccountsCommand}"
                            FontSize="11"
                            Style="{DynamicResource MaterialDesignFlatButton}">

                            <TextBlock
                                Padding="0"
                                Foreground="#FF9E2F2F"
                                TextAlignment="Center">
                                Close<LineBreak />
                                all</TextBlock>
                        </Button>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>